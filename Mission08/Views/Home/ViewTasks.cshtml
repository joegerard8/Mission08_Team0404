@model List<Mission08.Models.Task>

<h2 class="text-center my-4">Task List</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Task ID</th>
        <th>Task Name</th>
        <th>Due Date</th>
        <th>Quadrant</th>
        <th>Category</th>
        <th>Completed</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.TaskId</td>
            <td>@task.Name</td>
            <td>@(task.DueDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
            <td>@task.Quadrant</td>
            <td>@task.CategoryId</td>
            <td>@(task.Completed ? "Yes" : "No")</td>
            <td>
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>