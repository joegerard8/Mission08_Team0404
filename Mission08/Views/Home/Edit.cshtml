@model Mission08.Models.Task

<h2 class="text-center my-4">Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="Name">Task Name:</label>
        <input asp-for="Name" class="form-control" />
        <div class="invalid-feedback" asp-validation-for="Name"></div>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <div class="invalid-feedback" asp-validation-for="DueDate"></div>
    </div>

    <div class="form-group">
        <!-- Dropdown for selecting the Quadrant -->
        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant" class="form-control">
            <option value="1">Quadrant 1: Important / Urgent</option>
            <option value="2">Quadrant 2: Important / Not Urgent</option>
            <option value="3">Quadrant 3: Not Important / Urgent </option>
            <option value="4">Quadrant 4: Not Important / Not Urgent</option>
        </select>
        <div class="invalid-feedback" asp-validation-for="Quadrant"></div>
    </div>

    <div class="form-group">
        <!-- Dropdown for the Category, dynamically references db -->
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
        <div class="invalid-feedback" asp-validation-for="CategoryId"></div>
    </div>

    <div class="form-group">
        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <div class="invalid-feedback" asp-validation-for="Completed"></div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ViewTasks" class="btn btn-secondary">Cancel</a>
</form>


